@model OravaciData.Model.Person
@{
    ViewBag.Title = "Delete";
    if (string.IsNullOrEmpty(Layout) || Layout == "~/Views/Shared/_Layout.cshtml")
    {
        Layout = "~/Views/Shared/_NormalLayout.cshtml";
    }
    
}
<div class="ajax_ignore">
    @Html.Link("back", "Back to List", (object)Routes.IndexOfThisFromThis) 
</div>

<h2>Delete</h2>

<div>
    @Html.ValidationSummary(true)

    <h3>Are you sure you want to delete this?</h3>
    <fieldset>
        <legend>Fields</legend>
        @Html.DisplayFor(model => model.FullName)
        @Html.DisplayFor(model => model.Occupation)
        @Html.DisplayFor(model => model.Img)
    </fieldset>
</div>
@using (Html.BeginForm()) {
    <div class="actions">
        @Html.HiddenFor(model => Model.Id)
        <input type="submit" class="btn primary" value="Delete" />
    </div>
}
